
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TourismWorld.Models

<div style="margin-left: auto; margin-right: auto; width: 700px;">
    <div style="width: 100%; height: 400px; ">
        @{
            Class1 a = ViewBag.Hotels as Class1;
            <img src="~/Content/img/Hotels/@a.img_src" style=" height: 400px;" />
        }
    </div>
    <div>
        <p>
            <ul style="font-family: 'Roboto Slab', serif;
    font-size: 14px;
    font-weight: bold;
    color: #01939A;">
                <li>@a.hotel_name</li>
                <li>Stars: @a.rank</li>
                <li>Country: @a.country_name</li>
                <li>City: @a.cities_name</li>
            </ul>
        </p>
    </div>
    <div>
        @(new HtmlString(@a.about))
    </div>
</div>

